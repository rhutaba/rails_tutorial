<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <table>
        <tr class="user_profile">
             <td>EMAIL</td>
             <td><%= @user.email %></td>
        </tr>
        <tr class="user_profile">
            <td>CREATE</td>
            <td><%= @user.created_at %></td>
        </tr>
        <tr class="user_profile">
            <td>UPDATE</td>
            <td><%= @user.updated_at %></td>
        </tr>
        <tr class="user_profile">
            <td>DISPLAY</td>
            <td><%= Time.now %></td>
        </tr>
    </table>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
